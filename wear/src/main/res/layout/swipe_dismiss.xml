<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.SwipeDismissFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_dismiss_root"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollX="200dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi lobortis lectus venenatis, condimentum eros at, ultrices turpis. Pellentesque vestibulum vitae quam nec consectetur."
                android:textColor="@color/black"/>
        </LinearLayout>
    </HorizontalScrollView>
</android.support.wearable.view.SwipeDismissFrameLayout>